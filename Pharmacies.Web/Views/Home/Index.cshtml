@using Microsoft.AspNetCore.Identity
@model Pharmacies.Web.Models.PharmaciesViewModels.AllPharmaciesViewModel

@{
    ViewData["Title"] = "Home";
    var currentUser = User.Identity.Name;
}
@if (this.User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <div class="container-fluid text-center" style="padding: 20px 30px 0 30px">
            <div class="jumbotron mt-3 Eventures-bg-color">
                <h2 style="color: black">Greetings, Administrator - @currentUser!</h2>
                <hr style="height: 3px; background-color:darkgrey" />
                <p>
                    <h4 style="color: darkgrey">Enjoy your work.</h4>
                </p>

            </div>
        </div>
    }
    else
    {
        <div class="row justify-content-start" lang="bg">
            <partial name="/Views/Shared/_PharmaciesPartial.cshtml" />
        </div>
    }
}
else
{
        <div class="row justify-content-start" lang="bg">
            <partial name="/Views/Shared/_PharmaciesPartial.cshtml" />
        </div>
}
