@using Microsoft.AspNetCore.Identity

@{
    ViewData["Title"] = "Home";
    var currentUser = User;
}
@if (this.User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Admin"))
    {
        <div class="container-fluid text-center" style="padding: 20px 30px 0 30px">
            <div class="jumbotron mt-3 Eventures-bg-color">
                <h2 style="color: black">Greetings, Administrator - @currentUser.Identity.Name!</h2>
                <hr style="height: 3px; background-color:darkgrey" />
                <p>
                    <h4 style="color: darkgrey">Enjoy your work.</h4>
                </p>

            </div>
        </div>
    }
    else
    {
        @*<div class="row text-center" lang="bg">*@
            <partial name="/Views/Shared/_PharmaciesPartial.cshtml" />
        @*</div>*@
    }
}
else
{
        @*<div class="container-fluid text-center" lang="bg">*@
            <partial name="/Views/Shared/_PharmaciesPartial.cshtml" />
        @*</div>*@
}
