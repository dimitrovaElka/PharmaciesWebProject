@model Pharmacies.Web.Models.PharmaciesViewModels.AllPharmaciesViewModel

<h4 class="text-center mt-2 font-weight-bold">Аптеки с лиценз</h4>
<hr class="hr-2" />

<table class="table table-striped .thead-dark">
    <thead lang="bg">
        <tr>
            <th>#</th>
            <th>Аптека име</th>
            <th>Населено място</th>
            <th>адрес</th>
            <th>управител на аптеката</th>
        </tr>
    </thead>
    <tbody>
        @{ var i = 1;}
        @foreach (var item in Model.AllPharmacies.ToList())
        {
            <tr>
                <td>@(i++)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Menager)
                </td>
            </tr>
        }
    </tbody>
</table>

