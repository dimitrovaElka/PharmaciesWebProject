@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1 class="text-center">Регистрация</h1>
<hr class="hr-2 half-width" />
<form class="mx-auto half-width" method="post" asp-controller="Account" asp-action="Register">
    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-center">
                <label asp-for="Username" class="text-center"></label>
            </div>
            <input asp-for="Username" class="form-control" placeholder="Username..." />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="col">
            <div class="d-flex justify-content-center">
                <label asp-for="Email">Email</label>
            </div>
            <input asp-for="Email" type="email" class="form-control" placeholder="Email...">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-center">
                <label asp-for="Password"></label>
            </div>
            <input asp-for="Password" type="password" class="form-control" placeholder="Парола...">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="col">
            <div class="d-flex justify-content-center">
                <label asp-for="ConfirmPassword">Потвърдете паролата</label>
            </div>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Парола...">
        </div>
    </div>
    <hr class="hr-2" />
    <div class="row">
        <div class="col">
            <div class="d-flex justify-content-center">
                <label asp-for="FirstName">First name</label>
            </div>
            <input asp-for="FirstName" class="form-control" placeholder="First Name..." name="FirstName">
        </div>
        <div class="col">
            <div class="d-flex justify-content-center">
                <label asp-for="LastName">Last name</label>
            </div>
            <input asp-for="LastName" class="form-control" placeholder="First Name..." name="LastName">
        </div>
    </div>
    <div class="form-group">
        <label class="text-center" asp-for="Uin">УИН</label>
        <input asp-for="Uin" class="form-control" placeholder="УИН, ако сте фармацевт ..." name="UCN">
    </div>
    <hr class="hr-2" />
    <div class="button-holder d-flex justify-content-center">
        <button type="submit" class="btn Eventures-bg-color">Register</button>
    </div>
</form>
